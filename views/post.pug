extends layout 
block content 
    nav
        div(class='nav-wrapper')
            ul(id='navbar-links' class='left')
                li
                    button(id='index-button' class='btn navbar-button' onclick='window.location="/"') Home page
            ul(id='navbar-links' class='right')
                li
                    button(id='register-button' class='btn navbar-button' onclick='window.location="/register"') Register 
                li
                    button(id='login-button' class='btn navbar-button' onclick='window.location="/login"') Login
                li(id='logout-section')
                    button(id='logout-button' class='btn navbar-button') Logout
    div(id='post')

    div(id='create-comment')
        form(action='' id='comment-form' method='POST')
            textarea(name='message' form='comment-form' class='materialize-textarea' placeholder='Write your message here...')
            textarea(name='code' form='comment-form' class='materialize-textarea' placeholder='Put useful code here...')
            input(type='submit' class='btn')
    div(id='comment-section' class='comment-section')
    script(src='/javascripts/post.js' defer)