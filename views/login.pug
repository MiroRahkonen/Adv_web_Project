extends layout 
block content
    include navbar.pug
    //nav
        div(class='nav-wrapper')
            ul(id='navbar-links' class='left')
                li
                    button(id='index-button' class='btn navbar-button' onclick='window.location="/"') Home page
            ul(id='navbar-links' class='right')
                li
                    button(id='register-button' class='btn navbar-button' onclick='window.location="/register"') Register 
                li
                    button(id='login-button' class='btn navbar-button' onclick='window.location="/login"') Login

    h1 Login
    p(id="error-message" class='error')
    form(action='' id='login-form' method='POST')
        label(for='email') E-mail 
        input(type='email' name='email' id='email' required)
        label(for='password') Password 
        input(type='password' name='password' id='password' required)
        br
        br
        input(class='btn' type='submit' value='Login')
    script(src='/javascripts/login.js' defer) 